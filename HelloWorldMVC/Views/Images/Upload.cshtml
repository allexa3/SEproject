@model HelloWorldMVC.Models.ImageUploadViewModel

@{
    ViewData["Title"] = "Upload Image";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="d-flex align-items-center justify-content-between mb-3">
            <div>
                <h1 class="h3 mb-1">Upload an image</h1>
                <p class="text-muted mb-0">This is a UI stub for the distributed pipeline (processing not wired yet).</p>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Upload" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label asp-for="File" class="form-label"></label>
                        <input asp-for="File" class="form-control" type="file" accept="image/*" />
                        <div class="form-text">Accepted: png/jpg/jpeg/gif/webp (max 10MB)</div>
                        <span asp-validation-for="File" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            Upload
                        </button>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                            Back
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


